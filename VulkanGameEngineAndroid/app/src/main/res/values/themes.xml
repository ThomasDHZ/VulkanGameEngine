<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - MUST inherit from AppCompat -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#FF6200EE</item>
        <item name="colorPrimaryVariant">#FF3700B3</item>
        <item name="colorOnPrimary">#FFFFFFFF</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">#FF03DAC6</item>
        <item name="colorSecondaryVariant">#FF018786</item>
        <item name="colorOnSecondary">#FF000000</item>

        <!-- Background (black for Vulkan) -->
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/black</item>

        <!-- Optional: hide status bar completely (immersive mode) -->
        <!-- <item name="android:windowFullscreen">true</item> -->
    </style>
</resources>